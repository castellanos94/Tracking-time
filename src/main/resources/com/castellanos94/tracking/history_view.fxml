<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="history-window" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.castellanos94.tracking.HistoryController">
    <!-- Header: Filters -->
    <top>
        <VBox spacing="10">
            <padding><Insets top="15" right="15" bottom="10" left="15"/></padding>
            <HBox spacing="10" alignment="CENTER">
               <Label text="History" styleClass="view-title"/>
            </HBox>
            
            <HBox spacing="15" alignment="CENTER" styleClass="filter-bar">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="From:" styleClass="filter-label"/>
                    <DatePicker fx:id="startDatePicker" prefWidth="120" />
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="To:" styleClass="filter-label"/>
                    <DatePicker fx:id="endDatePicker" prefWidth="120" />
                </HBox>
                <Button text="Search" onAction="#handleSearch" styleClass="action-button-small"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Data Table -->
    <center>
        <VBox spacing="5">
             <padding><Insets top="0" right="15" bottom="15" left="15"/></padding>
            <TableView fx:id="historyTable" VBox.vgrow="ALWAYS" styleClass="history-table" editable="true">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="startColumn" text="Start" prefWidth="80"/>
                    <TableColumn fx:id="endColumn" text="End" prefWidth="80"/>
                    <TableColumn fx:id="durationColumn" text="Duration" prefWidth="80"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="hourlyRateColumn" text="Hourly Rate" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom: Actions/Summary -->
    <bottom>
        <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="bottom-bar">
             <padding><Insets top="10" right="15" bottom="15" left="15"/></padding>
             <Button text="Delete" onAction="#handleDelete" styleClass="delete-button"/>
             <HBox HBox.hgrow="ALWAYS" />
             <Label text="Total Earnings:" styleClass="summary-label-sm"/>
             <Label fx:id="totalEarningsLabel" text="0.00" styleClass="summary-value"/>
             <Label text="Total Hours:" styleClass="summary-label-sm"/>
             <Label fx:id="totalHoursLabel" text="00:00:00" styleClass="summary-value"/>
        </HBox>
    </bottom>

</BorderPane>
