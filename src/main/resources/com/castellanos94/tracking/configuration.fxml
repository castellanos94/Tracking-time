<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.castellanos94.tracking.ConfigurationController"
      styleClass="modal-window" spacing="10" alignment="TOP_CENTER" minWidth="400" minHeight="500">

    <HBox alignment="CENTER_LEFT" spacing="10">
         <Label text="Configuration" styleClass="view-title" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
         <Button text="âœ•" onAction="#handleClose" styleClass="close-button" />
    </HBox>

    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="config-tabs">
        <tabs>
            <Tab text="Categories">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS" styleClass="history-table">
                        <columns>
                            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                            <TableColumn fx:id="colRate" text="Rate ($/hr)" prefWidth="80"/>
                            <TableColumn fx:id="colColor" text="Color" prefWidth="80"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <VBox spacing="5" styleClass="input-container">
                        <Label text="Edit/New Category" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="Name:" style="-fx-text-fill: white;" minWidth="50" />
                             <TextField fx:id="nameField" promptText="Category Name" HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="Rate:" style="-fx-text-fill: white;" minWidth="50" />
                             <TextField fx:id="rateField" promptText="0.0" HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="Color:" style="-fx-text-fill: white;" minWidth="50" />
                             <ColorPicker fx:id="colorPicker" />
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                            <Button text="New/Clear" onAction="#handleClear" styleClass="secondary-button" />
                            <Button text="Delete" onAction="#handleDelete" styleClass="stop-button" />
                            <Button text="Save" onAction="#handleSave" styleClass="action-button" />
                        </HBox>
                    </VBox>
                </VBox>
            </Tab>
            
            <Tab text="Projects">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="projectsTable" VBox.vgrow="ALWAYS" styleClass="history-table">
                        <columns>
                            <TableColumn fx:id="colProjectName" text="Name" prefWidth="150"/>
                            <TableColumn fx:id="colProjectDesc" text="Description" prefWidth="250"/>
                            <TableColumn fx:id="colProjectOwner" text="Owner" prefWidth="120"/>
                            <TableColumn fx:id="colProjectStatus" text="Status" prefWidth="80"/>
                        </columns>
                         <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <VBox spacing="5" styleClass="input-container">
                        <Label text="Edit/New Project" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="Name:" style="-fx-text-fill: white;" minWidth="70" />
                             <TextField fx:id="projectNameField" promptText="Project Name" HBox.hgrow="ALWAYS"/>
                        </HBox>
                         <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="Desc:" style="-fx-text-fill: white;" minWidth="70" />
                             <TextField fx:id="projectDescField" promptText="Description (Optional)" HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="Owner:" style="-fx-text-fill: white;" minWidth="70" />
                             <TextField fx:id="projectOwnerField" promptText="Owner (Optional)" HBox.hgrow="ALWAYS"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                            <Button text="New/Clear" onAction="#handleProjectClear" styleClass="secondary-button" />
                            <Button text="Delete" onAction="#handleProjectDelete" styleClass="stop-button" />
                            <Button text="Save" onAction="#handleProjectSave" styleClass="action-button" />
                        </HBox>
                    </VBox>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
