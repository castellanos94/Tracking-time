<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.castellanos94.tracking.ConfigurationController"
      styleClass="widget-container" spacing="10" alignment="TOP_CENTER" minWidth="400" minHeight="500">

    <Label text="Category Configuration" styleClass="title-label" />

    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colRate" text="Rate ($/hr)" prefWidth="80"/>
            <TableColumn fx:id="colColor" text="Color" prefWidth="80"/>
        </columns>
    </TableView>

    <VBox spacing="5" styleClass="input-container">
        <Label text="Edit/New Category" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
             <Label text="Name:" style="-fx-text-fill: white;" minWidth="50" />
             <TextField fx:id="nameField" promptText="Category Name" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
             <Label text="Rate:" style="-fx-text-fill: white;" minWidth="50" />
             <TextField fx:id="rateField" promptText="0.0" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
             <Label text="Color:" style="-fx-text-fill: white;" minWidth="50" />
             <ColorPicker fx:id="colorPicker" />
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="New/Clear" onAction="#handleClear" styleClass="secondary-button" />
            <Button text="Delete" onAction="#handleDelete" styleClass="stop-button" />
            <Button text="Save" onAction="#handleSave" styleClass="action-button" />
        </HBox>
    </VBox>

    <Button text="Close" onAction="#handleClose" styleClass="secondary-button" maxWidth="Infinity"/>

</VBox>
