<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.castellanos94.tracking.ImportWizardController"
      spacing="15" alignment="TOP_LEFT" styleClass="modal-window">
    <padding><Insets top="10" right="20" bottom="20" left="20"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
         <Label text="Import Data" styleClass="view-title" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
         <Button text="âœ•" onAction="#handleCancel" styleClass="close-button" />
    </HBox>

    <VBox spacing="5">
        <Label text="Select File:" style="-fx-text-fill: #aaaaaa;" />
        <HBox spacing="10">
            <TextField fx:id="pathField" editable="false" promptText="Select file to import..." HBox.hgrow="ALWAYS" style="-fx-background-color: #3c3c3c; -fx-text-fill: white;" />
            <Button text="Browse" onAction="#handleBrowse" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <VBox spacing="5">
        <Label text="Format:" style="-fx-text-fill: #aaaaaa;" />
        <HBox spacing="15">
            <RadioButton fx:id="jsonRadio" text="JSON" selected="true" style="-fx-text-fill: white;">
                <toggleGroup>
                    <ToggleGroup fx:id="formatGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="xlsxRadio" text="Excel (XLSX)" toggleGroup="$formatGroup" style="-fx-text-fill: white;" />
            <RadioButton fx:id="csvRadio" text="CSV" toggleGroup="$formatGroup" style="-fx-text-fill: white;" />
            <RadioButton fx:id="customRadio" text="Custom" toggleGroup="$formatGroup" style="-fx-text-fill: white;" />
        </HBox>
    </VBox>

    <VBox spacing="5">
        <Label text="Default Category (Required for Custom):" style="-fx-text-fill: #aaaaaa;" />
        <ComboBox fx:id="categoryComboBox" promptText="Select Category" prefWidth="250" />
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #555555; -fx-text-fill: white; -fx-cursor: hand;" />
        <Button text="Import" onAction="#handleImport" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>

</VBox>
